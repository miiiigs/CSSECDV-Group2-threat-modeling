<div class="bio">
  <div class="header">
    <h2>@{{user.username}}</h2>

  </div>

  <img
    class="profile-pic"
    src="data:{{user.profilePicContentType}};base64,{{user.profilePicBase64}}"
    alt="Profile Picture"
  />

  <h3>{{user.lastName}}, {{user.firstName}}</h3>
  <h4>{{user.username}}</h4>
  <h4>{{user.id}}</h4>
 
  <!-- Tabs as vertical column -->
  <div style="display:flex;flex-direction:column;gap:18px;margin-top:24px;max-width:220px;">
    <button onclick="document.getElementById('editProfileModal').style.display='block'" class="profile-tab-btn profile-tab-green">‚úèÔ∏è Edit Profile</button>
    <button onclick="document.getElementById('changePasswordModal').style.display='block'" class="profile-tab-btn profile-tab-green">üîí Change Password</button>
    <button onclick="document.getElementById('securityQuestionsModal').style.display='block'" class="profile-tab-btn profile-tab-green">üõ°Ô∏è Set Security Questions</button>
  </div>

  <div id="changePasswordModal" class="profile-modal">
    <div class="profile-modal-content">
      <span class="profile-modal-close" onclick="document.getElementById('changePasswordModal').style.display='none'">&times;</span>
      {{> profile_change_password }}
    </div>
  </div>

  <!-- Security Questions Section -->
  <div id="securityQuestionsModal" class="profile-modal">
    <div class="profile-modal-content">
      <span class="profile-modal-close" onclick="document.getElementById('securityQuestionsModal').style.display='none'">&times;</span>
      {{> profile_security_questions }}
    </div>
  </div>

<style>
  .profile-tab-btn {
    background: #364b46;
    color: #fff;
    border: none;
    border-radius: 10px;
    padding: 12px 0;
    font-size: 1.08em;
    font-weight: 700;
    box-shadow: 0 2px 12px #7EAE9644;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s, color 0.2s;
    width: 100%;
    margin: 0 auto;
    letter-spacing: 0.02em;
  }
  .profile-tab-btn:hover, .profile-tab-green:hover {
    background: #7EAE96;
    color: #364b46;
    box-shadow: 0 4px 16px #364b4644;
  }
  .profile-modal-content {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 4px 32px #7EAE96cc;
    padding: 32px 28px 24px 28px;
    min-width: 340px;
    max-width: 95vw;
    position: relative;
    animation: slideDown 0.2s;
    border: 1.5px solid #7EAE96;
  }
  .profile-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(30,40,80,0.25);
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.2s;
  }
  .profile-modal[style*="display: block"] {
    display: flex !important;
  }
  .profile-modal-close {
    position: absolute;
    top: 12px;
    right: 18px;
    font-size: 2em;
    color: #364b46;
    cursor: pointer;
    font-weight: bold;
    transition: color 0.2s;
  }
  .profile-modal-close:hover {
    color: #7EAE96;
  }
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  @keyframes slideDown {
    from { transform: translateY(-40px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
</style>

  <!-- modal area -->
  <div
    id="editProfileModal"
    class="profile-modal"
  >
    <div class="profile-modal-content">
      <span class="profile-modal-close" onclick="document.getElementById('editProfileModal').style.display='none'">&times;</span>
      <form action="/update-profile" method="POST" enctype="multipart/form-data" style="background:#fff;padding:24px 20px 16px 20px;border-radius:16px;box-shadow:0 2px 12px #7EAE96cc;display:flex;flex-direction:column;gap:18px;border:1.5px solid #7EAE96;">
        <div style="display:flex;flex-direction:column;gap:6px;">
          <label style="font-weight:600;color:#364b46;">Change Profile Picture</label>
          <input type="file" name="profilePicture" accept="image/*" style="padding:8px 12px;border:1px solid #bfc7d5;border-radius:8px;font-size:1em;background:#f5f5f5;" />
        </div>
        <div style="display:flex;flex-direction:column;gap:6px;">
          <label style="font-weight:600;color:#364b46;">Username</label>
          <input type="text" name="username" value="{{user.username}}" style="padding:8px 12px;border:1px solid #bfc7d5;border-radius:8px;font-size:1em;background:#f5f5f5;" />
        </div>
        <div style="display:flex;flex-direction:column;gap:6px;">
          <label style="font-weight:600;color:#364b46;">Pronouns</label>
          <input type="text" name="pronouns" value="{{user.pronouns}}" style="padding:8px 12px;border:1px solid #bfc7d5;border-radius:8px;font-size:1em;background:#f5f5f5;" />
        </div>
        <div style="display:flex;flex-direction:column;gap:6px;">
          <label style="font-weight:600;color:#364b46;">Phone Number</label>
          <input type="text" name="phoneNumber" value="{{user.phoneNumber}}" style="padding:8px 12px;border:1px solid #bfc7d5;border-radius:8px;font-size:1em;background:#f5f5f5;" />
        </div>
        <div style="display:flex;flex-direction:column;gap:6px;">
          <label style="font-weight:600;color:#364b46;">Short Bio</label>
          <textarea name="bio" style="padding:8px 12px;border:1px solid #bfc7d5;border-radius:8px;font-size:1em;background:#f5f5f5;">{{user.bio}}</textarea>
        </div>
        <button type="submit" style="background:#364b46;color:#fff;font-weight:700;border:none;border-radius:10px;padding:12px 0;font-size:1.08em;box-shadow:0 2px 12px #7EAE9644;cursor:pointer;transition:background 0.2s;">Save Changes</button>
      </form>
    </div>
  </div>

  <div>
    <p>pronouns: {{user.pronouns}}</p>
    <p>Contact: {{user.phoneNumber}}</p>
    <p>Bio: {{user.bio}}</p>
  </div>
</div>
<div class="view-tab">
  <div>
    <h2 style="color: black;">Reservations</h2>

  </div>
      
  <div>
    {{#if reservations.length}}
      <table>
        <thead>
          <tr>
            <th>Lab</th>
            <th>Computer</th>
            <th>Date</th>
            <th>Start Time</th>
            <th style="padding: 0 16px;">End Time</th>
          </tr>
        </thead>
        <tbody>
          {{#each reservations}}
            <tr>
              <td style="padding: 0 16px;">{{this.labNumber}}</td>
              <td style="padding: 0 16px;">{{this.seatNumber}}</td>
              <td style="padding: 0 16px;">{{this.date}}</td>
              <td style="padding: 0 16px;">{{this.startTime}}</td>
              <td style="padding: 0 28px;">{{this.endTime}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>You have no reservations yet.</p>
    {{/if}}

  </div>

</div>