<div class="reset-password-container" style="max-width:400px;margin:40px auto;padding:30px;background:#fff;border-radius:10px;box-shadow:0 2px 8px #0001;font-family:'Segoe UI',Arial,sans-serif;">
  <h2 style="text-align:center;color:#1a237e;font-weight:700;">Reset Password</h2>
  <form id="reset-password-request-form" action="#" method="post">
    <label for="email" style="font-weight:600;">Email</label>
    <input type="email" id="email" name="email" required style="width:100%;padding:8px;margin:8px 0 16px 0;border:1px solid #ccc;border-radius:4px;" />
    <button type="submit" style="width:100%;background:#1a237e;color:#fff;padding:10px 0;border:none;border-radius:4px;font-weight:600;">Request Reset</button>
  </form>
  <div id="reset-password-request-message" style="color:red;margin-top:10px;text-align:center;"></div>
  <script>
    document.getElementById('reset-password-request-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      document.getElementById('reset-password-request-message').textContent = '';
      const email = document.getElementById('email').value;
      try {
        const res = await fetch('/auth/request-password-reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });
        const data = await res.json();
        if (res.ok) {
          document.getElementById('reset-password-request-message').style.color = 'green';
          document.getElementById('reset-password-request-message').textContent = data.message || 'Check your email for reset instructions.';
        } else {
          document.getElementById('reset-password-request-message').style.color = 'red';
          document.getElementById('reset-password-request-message').textContent = data.message || 'Request failed.';
        }
      } catch (err) {
        document.getElementById('reset-password-request-message').style.color = 'red';
        document.getElementById('reset-password-request-message').textContent = 'Server error.';
      }
    });
  </script>
</div>
